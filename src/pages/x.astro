---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Fragment slot="head">
    <title>X | AI Social Creator</title>
  </Fragment>
  <div class="animate-slidein">
    <h1 class="text-4xl font-bold mb-4 font-sans">X</h1>
    <p class="text-lg text-gray-600 font-sans">
      This is the X page. More features coming soon.
    </p>
  </div>
  <style>
    .animate-slidein {
      animation: slidein 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }
    @keyframes slidein {
      from {
        opacity: 0;
        transform: translateX(48px);
      }
      to {
        opacity: 1;
        transform: none;
      }
    }
  </style>
</Layout>
