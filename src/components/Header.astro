---
interface Props {}
const { pathname } = Astro.url;
---

<header class="bg-white shadow-md">
  <div class="container mx-auto flex items-center justify-between py-4 px-6">
    <h1 class="text-2xl font-semibold tracking-tight text-gray-900 font-sans">
      AI Social Creator
    </h1>
    <nav>
      <ul class="flex space-x-8 text-lg font-semibold">
        {
          /* Active link is highlighted with a circle around the icon, outline style */
        }
        <li>
          <a
            href="/linkedin"
            class={`group flex items-center gap-2 min-w-[120px] px-3 py-1 transition-colors duration-200
              ${
                pathname === "/linkedin"
                  ? "text-blue-700"
                  : "text-gray-700 hover:text-blue-700"
              }
            `}
          >
            <span
              class={`inline-flex items-center justify-center w-9 h-9 rounded-full border transition-all duration-200
              ${pathname === "/linkedin" ? "bg-blue-50 border-blue-400" : "border-gray-300 group-hover:bg-blue-50 group-hover:border-blue-200"}
            `}
            >
              {/* LinkedIn Outline Icon */}
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none"
                ><circle
                  cx="10"
                  cy="10"
                  r="9"
                  stroke="#0A66C2"
                  stroke-width="1.5"></circle><rect
                  x="5.5"
                  y="8.5"
                  width="2"
                  height="6"
                  rx="1"
                  stroke="#0A66C2"
                  stroke-width="1.2"></rect><circle
                  cx="6.5"
                  cy="6.5"
                  r="1"
                  stroke="#0A66C2"
                  stroke-width="1.2"></circle><rect
                  x="9.5"
                  y="11"
                  width="2"
                  height="3.5"
                  rx="1"
                  stroke="#0A66C2"
                  stroke-width="1.2"></rect><path
                  d="M13.5 15.5V12.5C13.5 11.3954 12.6046 10.5 11.5 10.5C10.3954 10.5 9.5 11.3954 9.5 12.5"
                  stroke="#0A66C2"
                  stroke-width="1.2"></path></svg
              >
            </span>
            LinkedIn
          </a>
        </li>
        <li>
          <a
            href="/x"
            class={`group flex items-center gap-2 min-w-[120px] px-3 py-1 transition-colors duration-200
              ${
                pathname === "/x"
                  ? "text-black"
                  : "text-gray-700 hover:text-black"
              }
            `}
          >
            <span
              class={`inline-flex items-center justify-center w-9 h-9 rounded-full border transition-all duration-200
              ${pathname === "/x" ? "bg-gray-100 border-black" : "border-gray-300 group-hover:bg-gray-100 group-hover:border-black"}
            `}
            >
              {/* X Outline Icon */}
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none"
                ><circle cx="10" cy="10" r="9" stroke="#111" stroke-width="1.5"
                ></circle><path
                  d="M7 7L13 13M13 7L7 13"
                  stroke="#111"
                  stroke-width="1.5"
                  stroke-linecap="round"></path></svg
              >
            </span>
            X
          </a>
        </li>
        <li>
          <a
            href="/configuration"
            class={`group flex items-center gap-2 min-w-[120px] px-3 py-1 transition-colors duration-200
              ${
                pathname === "/configuration"
                  ? "text-gray-900"
                  : "text-gray-700 hover:text-gray-900"
              }
            `}
          >
            <span
              class={`inline-flex items-center justify-center w-9 h-9 rounded-full border transition-all duration-200
              ${pathname === "/configuration" ? "bg-gray-200 border-gray-500" : "border-gray-300 group-hover:bg-gray-100 group-hover:border-gray-400"}
            `}
            >
              {/* Settings Outline Icon */}
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none"
                ><circle
                  cx="10"
                  cy="10"
                  r="3.5"
                  stroke="#111827"
                  stroke-width="1.3"></circle><circle
                  cx="10"
                  cy="10"
                  r="9"
                  stroke="#111827"
                  stroke-width="1.2"></circle><path
                  d="M15.5 10a5.5 5.5 0 0 1-11 0"
                  stroke="#111827"
                  stroke-width="1.2"
                  stroke-linecap="round"></path></svg
              >
            </span>
            Configuration
          </a>
        </li>
        <li>
          <a
            href="/aiChat"
            class={`group flex items-center gap-2 min-w-[120px] px-3 py-1 transition-colors duration-200
              ${
                pathname === "/aiChat"
                  ? "text-fuchsia-700"
                  : "text-gray-700 hover:text-fuchsia-700"
              }
            `}
          >
            <span
              class={`inline-flex items-center justify-center w-9 h-9 rounded-full border transition-all duration-200
              ${pathname === "/aiChat" ? "bg-fuchsia-50 border-fuchsia-400" : "border-gray-300 group-hover:bg-fuchsia-50 group-hover:border-fuchsia-200"}
            `}
            >
              {/* Chat Outline Icon */}
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <circle
                  cx="10"
                  cy="10"
                  r="9"
                  stroke="#C026D3"
                  stroke-width="1.5"></circle>
                <path
                  d="M6 12h8M6 9h8"
                  stroke="#C026D3"
                  stroke-width="1.2"
                  stroke-linecap="round"></path>
              </svg>
            </span>
            AI Chat
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
