---
interface Props {}
const { pathname } = Astro.url;
---

<header class="bg-white shadow-md">
  <div class="container mx-auto flex items-center justify-between py-4 px-6">
    <h1 class="text-2xl font-semibold tracking-tight text-gray-900 font-sans">
      AI Social Creator
    </h1>
    <nav>
      <ul class="flex space-x-8 text-lg font-medium">
        <li>
          <a
            href="/linkedin"
            class={`flex items-center gap-2 transition-colors ${pathname === "/linkedin" ? "text-black font-bold border-b-2 border-blue-600" : "text-gray-700 hover:text-blue-600"}`}
          >
            <svg
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="inline-block"
              ><rect width="24" height="24" rx="4" fill="#0A66C2"></rect><path
                d="M7.5 8.5v7M7.5 7.5a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm4 8v-3.5a1.5 1.5 0 0 1 3 0V15.5M11.5 15.5v-3.5a1.5 1.5 0 0 1 3 0V15.5M15.5 8.5v7"
                stroke="#fff"
                stroke-width="1.5"
                stroke-linecap="round"></path></svg
            >
            LinkedIn
          </a>
        </li>
        <li>
          <a
            href="/x"
            class={`flex items-center gap-2 transition-colors ${pathname === "/x" ? "text-black font-bold border-b-2 border-black" : "text-gray-700 hover:text-black"}`}
          >
            <svg
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="inline-block"
              ><rect width="24" height="24" rx="4" fill="#000"></rect><path
                d="M7 7l10 10M17 7L7 17"
                stroke="#fff"
                stroke-width="1.5"
                stroke-linecap="round"></path></svg
            >
            X
          </a>
        </li>
        <li>
          <a
            href="/configuration"
            class={`flex items-center gap-2 transition-colors ${pathname === "/configuration" ? "text-black font-bold border-b-2 border-gray-900" : "text-gray-700 hover:text-gray-900"}`}
          >
            <svg
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="inline-block"
              ><circle cx="12" cy="12" r="10" stroke="#888" stroke-width="1.5"
              ></circle><path
                d="M12 8v4l2 2"
                stroke="#888"
                stroke-width="1.5"
                stroke-linecap="round"></path></svg
            >
            Configuration
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
